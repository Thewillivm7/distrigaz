                <div class="entetape">Etapes sélectionnés</div>
                <div class="listeetape"></div>
            </div>
        </section>
        <section class="section section4">
            <div class="grdata">
                <label for="">Commentaire</label>
                <textarea name="" id="commentodp" ></textarea>
            </div>
        </section>
    </section>
    <div class="zonebtn">
        <button class="btnappli" id="btnannul">Annuler</button>
        <button class="btnappli" id="btnenr" disabled>Enregistrer</button>
    </div>
