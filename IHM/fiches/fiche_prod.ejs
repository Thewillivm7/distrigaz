<section class="fiche ficheprod">
    <section class="zonetitre">
        <section class="titrepage">
            <div class="titre"></div>
        </section>
        <span class="closefiche">&#10005;</span>
    </section>
    <section class="zonecorps">
        <section class="section section1">
            <div class="grdata">
                <label for="">Infos Commande</label>
                <span class="infocde"></span>
            </div>
            <div class="grdata">
                <label for="">Infos Devis</label>
                <span class="infodevis"></span>
            </div>
            <div class="grdata">
                <label for="">Infos Client</label>
                <span class="infoclient"></span>
            </div>

        </section>
        <section class="section section2">
            <div class="zoneart">
